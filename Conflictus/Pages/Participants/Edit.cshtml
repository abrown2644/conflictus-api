@page
@model Conflictus.Pages.Participants.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Participant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Participant.Id" />
            <div class="form-group">
                <label asp-for="Participant.Name" class="control-label"></label>
                <input asp-for="Participant.Name" class="form-control" />
                <span asp-validation-for="Participant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.FlagUrl" class="control-label"></label>
                <input asp-for="Participant.FlagUrl" class="form-control" />
                <span asp-validation-for="Participant.FlagUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-page="./Create">Back</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
