@page
@model Conflictus.Pages.Participants.IndexModel

@{
    ViewData["Title"] = "Participants";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-md-10 col-8">
        <h2 class="">Participants</h2>
    </div>
    <div class="col-md-2 col-4">
        <a asp-page="Create" class="btn btn-primary text-white">New Participant</a>
    </div>

    <div class="col-12 p-3 mt-3">
        <table id="PDT_load" class="PDT_load table table-striped  display compact" style="width:100%">
            <thead>
                <tr>
                    <th>Flag</th>
                    <th>Name</th>
                    <th>Options</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/participantList.js"></script>
}
