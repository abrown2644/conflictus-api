@page
@model Conflictus.Pages.Battles.IndexModel
@{
    var ids = new List<int>();
}

<br />
<div class="container row p-0 m-0">
    <div class="col-md-10 col-8">
        <h2 class="text-dark">Battles</h2>
    </div>
    <div class="col-md-2 col-4">
        <a asp-page="Create" class="btn btn-primary form-control text-white">New Battle</a>
    </div>

    <div class="col-12 p-3 mt-3">
        <table id="DT_load" class="table table-striped table-bordered display compact" style="width:100%">
            <thead>
                <tr>
                    <th>War</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Options</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/battleList.js"></script>
}